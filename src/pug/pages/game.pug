extends ../sample.pug
block content
    .container
        include ../includes/navbar
        .game
            .d-flex.align-items-center.justify-content-between
                .d-flex.align-items-center.game__inform
                    p.level Level: 1
                    p.correct.d-none.d-md-block correct: 0
                    p.incorrect.d-none.d-md-block Incorrect: 0
                button.toggle-game__btn.stop-btn Stop game                
            .tasks  
                form.task-form.game__right(onsubmit='return false')
                    .task 
                    p.smooth.d-none.d-sm-block =
                    input.result(type='number')
                .center
                    .score
                        p Score:
                        p.count 0
                    p.true-false +1
    include ../includes/result

